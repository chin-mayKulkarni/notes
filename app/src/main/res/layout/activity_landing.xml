<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlacktransparent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view_space"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <FrameLayout
        android:id="@+id/activity_layout"
        android:layout_below="@+id/view_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/notes_card"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/border"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/notes_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Notes"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="8dp"
                        android:text="Click on this tab for Notes"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/qp_card"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/notes_card"
                android:layout_margin="10dp"
                android:background="@drawable/border"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/qp_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Question Paper"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="8dp"
                        android:text="Click on this tab for Question Paper"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/sc_card"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/qp_card"
                android:layout_margin="10dp"
                android:background="@drawable/border"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/sc_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Syllabus Copy"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlue"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="8dp"
                        android:text="Click on this tab for Syllabus Copy"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/view_ui"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/sc_card"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/useful_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_ui"
                android:text="Useful links"
                android:textAllCaps="true"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlue"/>

            <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
                android:layout_below="@+id/useful_text">

                <androidx.cardview.widget.CardView
                    android:id="@+id/about_card"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_below="@+id/qp_card"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/border"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/iconaboutus"/>

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="8dp"
                            android:textAlignment="center"
                            android:text="About us!"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/support_card"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_gravity="top|right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/border"
                    app:cardCornerRadius="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/iconhelpus"/>

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="5dp"
                            android:textAlignment="center"
                            android:layout_marginBottom="8dp"
                            android:text="Support us!"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </FrameLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/fb_card"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/frame_layout"
                android:layout_margin="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                <LinearLayout
                    android:id="@+id/ButtonFacebook"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="description"
                    android:focusable="true"
                    android:gravity="center_horizontal|top"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/iconfbook"
                        android:importantForAccessibility="no"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ButtonInstagram"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="des"
                    android:focusable="true"
                    android:gravity="center_horizontal|top"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/iconinsta"
                        android:importantForAccessibility="no"/>

                </LinearLayout>

                    <LinearLayout
                        android:id="@+id/buttonTelegram"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:background="?selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:contentDescription="des"
                        android:focusable="true"
                        android:gravity="center_horizontal|top"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="62dp"
                            android:layout_height="62dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/icontelegram"
                            android:importantForAccessibility="no"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ButtonWhatsapp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:background="?selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:contentDescription="description"
                        android:focusable="true"
                        android:gravity="center_horizontal|top"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/iconwhatsapp"
                            android:importantForAccessibility="no"/>

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/feedbackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:textSize="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/fb_card"
                android:textColor="@color/black"
                android:clickable="true"
                android:layout_centerHorizontal="true"
                android:focusable="true" />





        </RelativeLayout>

    </FrameLayout>

    </ScrollView>

</RelativeLayout>